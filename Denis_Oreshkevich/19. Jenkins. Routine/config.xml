<?xml version='1.1' encoding='UTF-8'?>
<project>
  <actions/>
  <description></description>
  <displayName>19.Jenkins.Routine</displayName>
  <keepDependencies>false</keepDependencies>
  <properties>
    <com.sonyericsson.rebuild.RebuildSettings plugin="rebuild@1.33">
      <autoRebuild>false</autoRebuild>
      <rebuildDisabled>false</rebuildDisabled>
    </com.sonyericsson.rebuild.RebuildSettings>
    <hudson.model.ParametersDefinitionProperty>
      <parameterDefinitions>
        <hudson.model.StringParameterDefinition>
          <name>USERNAME</name>
          <description>Имя пользователя для логина</description>
          <defaultValue>root</defaultValue>
          <trim>true</trim>
        </hudson.model.StringParameterDefinition>
        <hudson.model.StringParameterDefinition>
          <name>HOST</name>
          <description>Адрес для подключения</description>
          <defaultValue>192.168.202.11</defaultValue>
          <trim>true</trim>
        </hudson.model.StringParameterDefinition>
        <hudson.model.PasswordParameterDefinition>
          <name>PASSWORD</name>
          <defaultValue>{AQAAABAAAAAQUaUBHZsXTfSV+NoXYAN5LsUAfD0zcPOKUCaPfZaw35Q=}</defaultValue>
        </hudson.model.PasswordParameterDefinition>
      </parameterDefinitions>
    </hudson.model.ParametersDefinitionProperty>
  </properties>
  <scm class="hudson.scm.NullSCM"/>
  <canRoam>true</canRoam>
  <disabled>false</disabled>
  <blockBuildWhenDownstreamBuilding>false</blockBuildWhenDownstreamBuilding>
  <blockBuildWhenUpstreamBuilding>false</blockBuildWhenUpstreamBuilding>
  <triggers/>
  <concurrentBuild>false</concurrentBuild>
  <builders>
    <hudson.tasks.Shell>
      <command>#!/bin/bash
echo &quot;-------------PING REMOTE HOST--------------&quot;
apt update &amp;&amp; apt install iputils-ping sshpass -y
ping -c 3 $HOST</command>
      <configuredLocalRules/>
    </hudson.tasks.Shell>
    <hudson.tasks.Shell>
      <command>#!/bin/bash
echo &quot;-------------NMAP SCAN FROM REMOTE HOST--------------&quot;
sshpass -p $PASSWORD ssh $USERNAME@$HOST &apos;
yum update -y &amp;&amp; yum install nmap -y
nmap -sP 192.168.202.1-50 &gt;&gt; nmap_log.log
&apos;</command>
      <configuredLocalRules/>
    </hudson.tasks.Shell>
    <hudson.tasks.Shell>
      <command>#!/bin/bash
echo &quot;-------------COPY FILE FROM REMOTE HOST--------------&quot;
sshpass -p $PASSWORD scp $USERNAME@$HOST:nmap_log.log nmap_log.log
</command>
      <configuredLocalRules/>
    </hudson.tasks.Shell>
    <hudson.tasks.Shell>
      <command>#!/bin/bash
sshpass -p $PASSWORD ssh $USERNAME@$HOST &apos;
echo &quot;-------------REMOVE FROM REMOTE HOST--------------&quot;
apt remove nmap -y
rm -rf nmap_log.log
&apos;</command>
      <configuredLocalRules/>
    </hudson.tasks.Shell>
    <hudson.tasks.Shell>
      <command>#!/bin/bash
echo &quot;-------------RESULT--------------&quot;
cat nmap_log.log</command>
      <configuredLocalRules/>
    </hudson.tasks.Shell>
    <hudson.tasks.Shell>
      <command>#!/bin/bash
echo &quot;-------------REMOVE FROM CURRENT HOST--------------&quot;
rm -rf nmap_log.log</command>
      <configuredLocalRules/>
    </hudson.tasks.Shell>
  </builders>
  <publishers/>
  <buildWrappers/>
</project>